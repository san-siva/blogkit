    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "postcss": "^8.4.49",
    "rollup": "^4.27.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-url": "^3.0.1",
    "sass": "^1.77.8",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  }
