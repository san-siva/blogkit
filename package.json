{
  "name": "blogkit",
  "version": "1.0.0",
  "description": "A reusable blog component library for React/Next.js applications with code highlighting, diagrams, and rich content features",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "blog",
    "react",
    "nextjs",
    "components",
    "markdown",
    "code-highlighting",
    "mermaid",
    "diagrams"
  ],
  "author": "Santhosh Siva",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "next": "^14.0.0 || ^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@react-spring/web": "^9.7.5",
    "mermaid": "^10.9.1",
    "prismjs": "^1.29.0",
    "react-syntax-highlighter": "^15.5.0",
    "stylekit": "git+ssh://git@github.com/san-siva/stylekit.git#72090a53cf65f9ef434bb8e0ebcf6e7c027e92f6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
